<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PhotoEditor.Views.PreviewPage">
  <ScrollView>
  <StackLayout>
	  <Image Source="{Binding ImageSource}" Aspect="AspectFill" HeightRequest="200" BackgroundColor="Blue">
        <Image.GestureRecognizers>
          <TapGestureRecognizer Command="{Binding ChooseImageCommand}"></TapGestureRecognizer>
        </Image.GestureRecognizers>>
      </Image>
  </StackLayout>
  </ScrollView>
</ContentPage>